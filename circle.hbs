version: 2

jobs:
  build:
    docker:
      - image: circleci/node:8.9.4
    steps:
      - setup_remote_docker
      - checkout
    {{#each dependencies}}
      - run: {{{this}}}
    {{/each}}

  deploy:
    docker:
      - image: circleci/node:8.9.4
    filters:
      tags:
        only: /v[0-9]+(\.[0-9]+)*/
    steps:
      - checkout
      - setup_remote_docker
    {{#each deployments}}
      - run: {{{this}}}
    {{/each}}

workflows:
  version: 2
  build-deploy:
    jobs:
      - build
      - deploy
