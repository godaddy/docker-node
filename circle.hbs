machine:
  services:
    - docker
  node:
    version: 8.9.4

dependencies:
  override:
    - docker info
  {{#each dependencies}}
    {{{this}}}
  {{/each}}

test:
  override:
    - echo "tests to be added later"

deployment:
  hub:
    tag: /v[0-9]+(\.[0-9]+)*/
    commands:
      - docker login -e $DOCKER_EMAIL -u $DOCKER_USER -p $DOCKER_PASS
    {{#each deployments}}
      {{{this}}}
    {{/each}}
